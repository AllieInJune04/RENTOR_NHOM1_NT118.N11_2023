<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPages.ProfileActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="-4dp"
                tools:layout_editor_absoluteY="210dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar_profile_input_fragment"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_avatar_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="16dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Số điện thoại *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_fullname"
                    app:layout_constraintTop_toBottomOf="@+id/img_avatar_profile_input_fragment" />

                <EditText
                    android:id="@+id/profile_input_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:ems="10"
                    android:inputType="phone"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text2" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Email *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_fullname"
                    app:layout_constraintTop_toBottomOf="@+id/profile_input_phone" />

                <EditText
                    android:id="@+id/profile_input_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text1" />

                <TextView
                    android:id="@+id/fullnameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Tên người dùng *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_fullname"
                    app:layout_constraintTop_toBottomOf="@+id/profile_input_email" />

                <EditText
                    android:id="@+id/profile_input_fullname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:backgroundTint="@color/colorSecondary"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fullnameText" />
                
                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tên đường *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/fullnameText"
                    app:layout_constraintTop_toBottomOf="@+id/profile_input_fullname" />

                <EditText
                    android:id="@+id/edtStreet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorSecondary"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/profile_input_fullname"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_fullname"
                    app:layout_constraintTop_toBottomOf="@+id/addressText" />

                <TextView
                    android:id="@+id/cityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Thành phố"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/addressText"
                    app:layout_constraintTop_toBottomOf="@+id/edtStreet" />

                <EditText
                    android:id="@+id/profile_input_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorSecondary"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/edtStreet"
                    app:layout_constraintStart_toStartOf="@+id/edtStreet"
                    app:layout_constraintTop_toBottomOf="@+id/cityText" />


                <TextView
                    android:id="@+id/dateofBirthText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ngày sinh *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/cityText"
                    app:layout_constraintTop_toBottomOf="@+id/profile_input_city" />

                <TextView
                    android:id="@+id/dateofBirthText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ngày sinh *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/cityText"
                    app:layout_constraintTop_toBottomOf="@+id/profile_input_city" />

                <EditText
                    android:id="@+id/profile_input_dateofbirth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorSecondary"
                    android:clickable="true"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/profile_input_city"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_city"
                    app:layout_constraintTop_toBottomOf="@+id/dateofBirthText" />

                <TextView
                    android:id="@+id/tvBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:inputType="datetime"
                    android:textColor="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_input_dateofbirth"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_dateofbirth"
                    app:layout_constraintTop_toTopOf="@+id/profile_input_dateofbirth" />



                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mặt trước CCCD *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/dateofBirthText2"
                    app:layout_constraintTop_toBottomOf="@+id/profile_input_dateofbirth" />

                <ImageView
                    android:id="@+id/ivFrontCiCard"
                    android:layout_width="0dp"
                    android:layout_height="235dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/profile_input_dateofbirth"
                    app:layout_constraintHorizontal_bias="0.476"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_dateofbirth"
                    app:layout_constraintTop_toBottomOf="@+id/text3"
                    />
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mặt sau CCCD *"
                    android:textColor="@color/sky"
                    app:layout_constraintStart_toStartOf="@+id/text3"
                    app:layout_constraintTop_toBottomOf="@+id/ivFrontCiCard" />

                <ImageView
                    android:id="@+id/ivBehindCiCard"
                    android:layout_width="0dp"
                    android:layout_height="235dp"
                    android:layout_marginTop="8dp"
                    android:background="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/profile_input_dateofbirth"
                    app:layout_constraintHorizontal_bias="0.476"
                    app:layout_constraintStart_toStartOf="@+id/profile_input_dateofbirth"
                    app:layout_constraintTop_toBottomOf="@+id/text4"
                    />

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonSize"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/round_button"
                    android:text="Cập nhật thông tin"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/ivBehindCiCard"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/ivBehindCiCard"
                    app:layout_constraintTop_toBottomOf="@+id/ivBehindCiCard"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>